<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:gravity="center_horizontal" >
    
    <TextView 		
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="Firearm"
		style="@style/heading"/>"
	
    <ScrollView 
        android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="vertical"
	    android:scrollbars="vertical">
		<LinearLayout 
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:orientation="vertical"  
			android:gravity="center_horizontal">
			
		    <LinearLayout
			    android:id="@+id/firearm_infoLayout"
			    android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:orientation="vertical"
				android:gravity="center_horizontal"
			    >
			<TextView
			    android:id="@+id/firearm_tv_io"			            
				style="@style/sub_headings"
				android:text="Investigating Officer Information"
				
				android:visibility="visible"
			/>
			<!-- Geolocation and weather -->
			<fragment 
	        android:id="@+id/fragId"
	        android:name="com.google.android.gms.maps.MapFragment"
	        android:layout_width="500dp"
	        android:layout_height="300dp"
	        />
			
		    <TextView 
		        android:id="@+id/value"
		        android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:text=""
				android:visibility="gone"
		        />
		   
		    
		    <TextView
				  android:id="@+id/firearmWeatherInfo"
				  android:layout_width="wrap_content"
				  android:layout_height="wrap_content"
				  android:text="weather Info"
				  android:visibility="gone"
				         />
		   
				
		    <!--  -->
			
			<GridLayout
			    android:id="@+id/firearm_rl1"
				android:layout_width="fill_parent"
				android:layout_height="match_parent"
				android:orientation="vertical"
				
				android:layout_marginLeft="10dp"
				android:paddingLeft="20dp"
				android:rowCount="4"
        		android:columnCount="2">
							        
				<TextView 
					android:id="@+id/firearm_tv_io_name"
					style="@style/tv_question"
					android:text="Name"
					android:layout_row="0"
            		android:layout_column="0"/>
				<EditText 
					android:id="@+id/firearm_io_name"
					android:layout_width="200dp"
					android:layout_height="wrap_content"
					android:layout_row="0"
            		android:layout_column="1"/>
							       
							       
				<TextView 
					android:id="@+id/firearm_tv_io_surname"
					style="@style/tv_question"
					android:text="Surname"
					android:layout_row="1"
            		android:layout_column="0"/>
				<EditText 
					android:id="@+id/firearm_io_surname"
					android:layout_width="200dp"
					android:layout_height="wrap_content"
					android:layout_row="1"
            		android:layout_column="1"/>
							       
							       
				<TextView 
					android:id="@+id/firearm_tv_io_rank"
					style="@style/tv_question"
					android:text="Rank"
					android:layout_row="2"
            		android:layout_column="0"/>
				<EditText 
					android:id="@+id/firearm_io_rank"
					android:layout_width="200dp"
					android:layout_height="wrap_content"
					android:layout_row="2"
            		android:layout_column="1"/>
							       
				<TextView 
					android:id="@+id/firearm_tv_io_cell"
					style="@style/tv_question"
					android:text="Cell"
					android:layout_row="3"
            		android:layout_column="0"/>
				<EditText 
					android:id="@+id/firearm_io_cell"
					android:layout_width="200dp"
					android:layout_height="wrap_content"
					android:layout_row="3"
            		android:layout_column="1"/>				       
			</GridLayout>
			
			<TextView
			    android:id="@+id/firearm_tv_foos"			            
				style="@style/sub_headings"
				android:text="First Officer On Scene"
				
			/>
			<GridLayout 
				android:layout_width="fill_parent"
				android:layout_height="match_parent"
				android:orientation="vertical"
				
				android:layout_marginLeft="10dp"
				android:paddingLeft="20dp"
				android:rowCount="3"
        		android:columnCount="2">
							        
				<TextView 
					android:id="@+id/firearm_tv_foos_name"
					style="@style/tv_question"
					android:text="Name"
					android:layout_row="0"
            		android:layout_column="0"/>
				<EditText 
					android:id="@+id/firearm_foos_name"
					android:layout_width="200dp"
					android:layout_height="wrap_content"
					android:layout_row="0"
            		android:layout_column="1"/>
							       
							       
				<TextView 
					android:id="@+id/firearm_tv_foos_surname"
					style="@style/tv_question"
					android:text="Surname"
					android:layout_row="1"
            		android:layout_column="0"/>
				<EditText 
					android:id="@+id/firearm_foos_surname"
					android:layout_width="200dp"
					android:layout_height="wrap_content"
					android:layout_row="1"
            		android:layout_column="1"/>
							       
							       
				<TextView 
					android:id="@+id/firearm_tv_foos_rank"
					style="@style/tv_question"
					android:text="Rank"
					android:layout_row="2"
            		android:layout_column="0"/>
				<EditText 
					android:id="@+id/firearm_foos_rank"
					android:layout_width="200dp"
					android:layout_height="wrap_content"
					android:layout_row="2"
            		android:layout_column="1"/>
								       
			</GridLayout>
			</LinearLayout>
			
			<!--     Demography      -->
			
		    <LinearLayout
			    android:id="@+id/firearm_demographicLayout"
			    android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:orientation="vertical"
				android:gravity="center_horizontal"
			    >
			<TextView
			    android:id="@+id/firearm_tv_victimGender"	            
				
				android:text="Victim Gender"
				style="@style/sub_headings"
				android:layout_marginTop="10dp"
			
			/>
			<GridLayout 
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:orientation="vertical"
				
				android:layout_marginLeft="10dp"
				android:paddingLeft="20dp"
				android:rowCount="1"
        		android:columnCount="1">
			<RadioGroup 
			    android:id="@+id/firearm_rgGender"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_gravity="left"
			    android:orientation="horizontal"
			    android:layout_row="0"
            	android:layout_column="0"
			    
			    >
			    <RadioButton 
			        android:id="@+id/firearm_rgbMale"
			        android:layout_width="wrap_content"
			    	android:layout_height="wrap_content"
			    	android:checked="false"
			    	android:text="Male"
			    	
			        />
			    <RadioButton 
			        android:id="@+id/firearm_rgbFemale"
			        android:layout_width="wrap_content"
			    	android:layout_height="wrap_content"
			    	android:checked="false"
			    	android:text="Female"
			    	
			        />
			    <RadioButton 
			        android:id="@+id/firearm_rgbUnknownGender"
			        android:layout_width="wrap_content"
			    	android:layout_height="wrap_content"
			    	android:checked="false"
			    	android:text="Unknown"
			    	
			        />
			</RadioGroup>
			</GridLayout>
			
			<TextView
			    android:id="@+id/firearm_tv_victimRace"			            
				style="@style/sub_headings"
				android:text="Victim Race"
				
				android:layout_marginTop="10dp"
				
				
			/>
			<GridLayout 
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:orientation="vertical"
				android:layout_marginLeft="10dp"
				android:paddingLeft="20dp"
				android:rowCount="1"
        		android:columnCount="1">
			<RadioGroup 
			    android:id="@+id/firearm_rgRace"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_gravity="left"
			    android:orientation="horizontal"
			    android:layout_row="0"
            	android:layout_column="0"
			    >
			    <RadioButton 
			        android:id="@+id/firearm_rgbAsian"
			        android:layout_width="wrap_content"
			    	android:layout_height="wrap_content"
			    	android:checked="false"
			    	android:text="Asian"
			    	
			        />
			    <RadioButton 
			        android:id="@+id/firearm_rgbBlack"
			        android:layout_width="wrap_content"
			    	android:layout_height="wrap_content"
			    	android:checked="false"
			    	android:text="Black"
			    	
			        />
			    <RadioButton 
			        android:id="@+id/firearm_rgbColoured"
			        android:layout_width="wrap_content"
			    	android:layout_height="wrap_content"
			    	android:checked="false"
			    	android:text="Coloured"
			    	
			        />
			    <RadioButton 
			        android:id="@+id/firearm_rgbWhite"
			        android:layout_width="wrap_content"
			    	android:layout_height="wrap_content"
			    	android:checked="false"
			    	android:text="White"
			    	
			        />
			    <RadioButton 
			        android:id="@+id/firearm_rgbUnknownRace"
			        android:layout_width="wrap_content"
			    	android:layout_height="wrap_content"
			    	android:checked="false"
			    	android:text="Unknown"
			    	
			        />
			</RadioGroup>
			</GridLayout>
			
			<TextView
			    android:id="@+id/firearm_tv_victimInfo"			            
				style="@style/sub_headings"
				android:text="Victim Information (if known individual)"
				android:layout_margin="5dp"
				
				
			/>
			<GridLayout 
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:orientation="vertical"
				android:layout_marginLeft="10dp"
				android:paddingLeft="20dp"
				android:rowCount="9"
        		android:columnCount="2">
							        
				<TextView 
					android:id="@+id/firearm_tv_victim_name"
					android:layout_width="100dp"
					android:layout_height="wrap_content"
					android:text="Victim Name"
					android:layout_row="0"
            		android:layout_column="0"
            		style="@style/tv_question"
					/>
				<EditText 
					android:id="@+id/firearm_victim_name"
					android:layout_width="200dp"
					android:layout_height="wrap_content"
					android:layout_row="0"
            		android:layout_column="1"
					/>
							       
							       
				<TextView 
					android:id="@+id/firearm_tv_victim_surname"
					android:layout_width="100dp"
					android:layout_height="wrap_content"
					style="@style/tv_question"
					android:text="Victim Surname"
					android:layout_row="1"
            		android:layout_column="0"
					/>
				<EditText 
					android:id="@+id/firearm_victim_surname"
					android:layout_width="200dp"
					android:layout_height="wrap_content"
					
					android:layout_row="1"
            		android:layout_column="1"
					/>
							       
							       
				<TextView 
					android:id="@+id/firearm_tv_victim_id"
					android:layout_width="100dp"
					android:layout_height="wrap_content"
					
					android:text="ID Number"
					style="@style/tv_question"
					android:layout_row="2"
            		android:layout_column="0"
					/>
				<EditText 
					android:id="@+id/firearm_victim_id"
					android:layout_width="200dp"
					android:layout_height="wrap_content"
					
					android:layout_row="2"
            		android:layout_column="1"
					/>
								       
				</GridLayout>
				</LinearLayout>
				
		    <!-- The body Starts  -->
		    	<TextView 
				    android:id="@+id/firearm_tv_the_body"
					style="@style/main_headings"
					android:layout_marginTop="100dp"
					
					android:text="@string/the_body"
					
					/>
		    	<GridLayout
			    android:id="@+id/firearm_theBodyLayout"
			    android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:orientation="vertical"
				android:layout_marginLeft="10dp"
				android:paddingLeft="20dp"
				android:rowCount="9"
        		android:columnCount="2"
			    >
				
				<TextView 
				    android:id="@+id/firearm_tv_bodyDecomposed"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_margin="5dp"
					
					style="@style/tv_question"
					android:text="Is the body decomposed?"
					android:layout_row="0"
            		android:layout_column="0"
					
					
					/>
				
				<RadioGroup 
			    android:id="@+id/firearm_rgBodyDecomposed"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_gravity="center_horizontal"
			    android:orientation="horizontal"
			    
			    android:layout_row="0"
            	android:layout_column="1"
			    >
				    <RadioButton
				    android:id="@+id/firearm_bodyDecomposedYes"
				    android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:checked="false"
			    	android:text="yes"
					
				    />
				    
				    <RadioButton
				    android:id="@+id/firearm_bodyDecomposedNo"
				    android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:checked="false"
			    	android:text="no"
					
				    />
				    
				</RadioGroup> 
				
				    
				<TextView 
				    android:id="@+id/firearm_tv_medicalIntervention"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_margin="5dp"
					
					style="@style/tv_question"
					android:text="Is there any medical intervention?"
					
					android:layout_row="1"
            		android:layout_column="0"
					/>
				<RadioGroup 
			    android:id="@+id/firearm_rgMedicalIntervention"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_gravity="center_horizontal"
			    android:orientation="horizontal"
			    
			    android:layout_row="1"
            		android:layout_column="1"
			    >
				    <RadioButton
				    android:id="@+id/firearm_medicalInterventionYes"
				    android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:checked="false"
			    	android:text="yes"
					
				    />
				    
				    <RadioButton
				    android:id="@+id/firearm_medicalInterventionNo"
				    android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:checked="false"
			    	android:text="no"
					
				    />
				    
				</RadioGroup> 
				
				<TextView
				    android:id="@+id/firearm_tv_whoFoundVictimBody" 
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_margin="5dp"
					
					style="@style/tv_question"
					android:text="Who found victim body?"
					
					android:layout_row="2"
            		android:layout_column="0"
					/>
				<EditText
					android:id="@+id/firearm_whoFoundVictimBody"
					android:layout_width="200dp"
					android:layout_height="wrap_content"
					
					android:layout_row="2"
            		android:layout_column="1"
					/>
				
				<TextView
				    android:id="@+id/firearm_tv_closeToWater"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_margin="5dp"
					
					style="@style/tv_question"
					android:text="Was the victim found close to water?"
					
					android:layout_row="3"
            		android:layout_column="0"
					/>
				
				<RadioGroup 
			    android:id="@+id/firearm_rgCloseToWater"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_gravity="center_horizontal"
			    android:orientation="horizontal"
			    
			    android:layout_row="3"
            		android:layout_column="1"
			    >
				    <RadioButton
				    android:id="@+id/firearm_closeToWaterYes"
				    android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:checked="false"
			    	android:text="yes"
					
				    />
				    
				    <RadioButton
				    android:id="@+id/firearm_closeToWaterNo"
				    android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:checked="false"
			    	android:text="no"
					
				    />
				    
				</RadioGroup> 
				<TextView
				    android:id="@+id/firearm_tv_rapeHomicide"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_margin="5dp"
					
					style="@style/tv_question"
					android:text="Is a rape-homicide suspected?"
					
					android:layout_row="4"
            		android:layout_column="0"
					/>
				
				<RadioGroup 
			    android:id="@+id/firearm_rgRapeHomicide"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_gravity="center_horizontal"
			    android:orientation="horizontal"
			    
			    android:layout_row="4"
            		android:layout_column="1"
			    >
				    <RadioButton
				    android:id="@+id/firearm_rapeHomicideYes"
				    android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:checked="false"
			    	android:text="yes"
					
				    />
				    
				    <RadioButton
				    android:id="@+id/firearm_rapeHomicideNo"
				    android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:checked="false"
			    	android:text="no"
					
				    />
				    
				</RadioGroup> 
				<TextView 
				    android:id="@+id/firearm_tv_suicideSuspected"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_margin="5dp"
					
					style="@style/tv_question"
					android:text="Suspicion of suicide?"
					
					android:layout_row="5"
            		android:layout_column="0"
					/>
				
				<RadioGroup 
			    android:id="@+id/firearm_rgSuicideSuspected"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_gravity="center_horizontal"
			    android:orientation="horizontal"
			    
			    android:layout_row="5"
            		android:layout_column="1"
			    >
				    <RadioButton
				    android:id="@+id/firearm_suicideSuspectedYes"
				    android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:checked="false"
			    	android:text="yes"
					
				    />
				    
				    <RadioButton
				    android:id="@+id/firearm_suicideSuspectedNo"
				    android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:checked="false"
			    	android:text="no"
					
				    />
				    
				</RadioGroup>
				
				<TextView 
				    android:id="@+id/firearm_tv_previousAttempts"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_margin="5dp"
					
					style="@style/tv_question"
					android:text="Any previous attempts?"
					
					android:layout_row="6"
            		android:layout_column="0"
					/>
				
				<RadioGroup 
			    android:id="@+id/firearm_rgPreviousAttempts"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_gravity="center_horizontal"
			    android:orientation="horizontal"
			    
			    android:layout_row="6"
            		android:layout_column="1"
			    >
				    <RadioButton
				    android:id="@+id/firearm_previousAttemptsYes"
				    android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:checked="false"
			    	android:text="yes"
					
				    />
				    
				    <RadioButton
				    android:id="@+id/firearm_previousAttemptsNo"
				    android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:checked="false"
			    	android:text="no"
					
				    />
				    
				</RadioGroup>
				<TextView 
				    android:id="@+id/firearm_tv_howManyAttempts"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_margin="5dp"
					
					style="@style/tv_question"
					android:text="How many attempts?"
				
					android:layout_row="7"
            		android:layout_column="0"
					/>
				<EditText 
					android:id="@+id/firearm_howManyAttempts"
					android:layout_width="200dp"
					android:layout_height="wrap_content"
					
					android:layout_row="7"
            		android:layout_column="1"
					/>
				
				</GridLayout>
				<!-- The Body ends here... -->
				
		    	<!-- The Scene of injury starts  -->
		    	<TextView
				    android:id="@+id/firearm_sceneOfInjury"
					style="@style/main_headings"
					android:layout_marginTop="100dp"
					
					android:text="@string/scene_of_injury"
					
					/>
		    	<GridLayout
			    android:id="@+id/firearm_sceneOfInjuryLayout"
			    android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:orientation="vertical"
				android:layout_marginLeft="10dp"
				android:paddingLeft="20dp"
				android:rowCount="10"
        		android:columnCount="2"
			    >
				
				
				<TextView
				    android:id="@+id/firearm_tv_sceneIOType" 
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_margin="5dp"
					
					style="@style/tv_question"
					android:text="Is the scene Outside or Inside?"
					android:layout_row="0"
            		android:layout_column="0"
					
					/>
				
				<RadioGroup 
			    android:id="@+id/firearm_rgSceneIOType"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_gravity="center_horizontal"
			    android:orientation="horizontal"
			   
			    android:layout_row="0"
            	android:layout_column="1"
			    
			    >
				    <RadioButton
				    android:id="@+id/firearm_SceneIOTypeInside"
				    android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:checked="false"
			    	android:text="Inside"
					
				    />
				    
				    <RadioButton
				    android:id="@+id/firearm_SceneIOTypeOutside"
				    android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:checked="false"
			    	android:text="Outside"
					
				    />
				    
				</RadioGroup>
				<TextView 
				    android:id="@+id/firearm_tv_whereInside"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_margin="5dp"
					
					style="@style/tv_question"
					android:text="Where inside?"
					android:layout_row="1"
            	android:layout_column="0"
					/>
				<Spinner
				    android:id="@+id/firearm_sceneIType"
				    android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:entries="@array/insideTypes"
					android:prompt="@string/choose"
					android:layout_row="1"
            	android:layout_column="1"
				    />
				<TextView 
				    android:id="@+id/firearm_tv_sceneITypeOther"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_margin="5dp"
					
					style="@style/tv_question"
					android:text="If Other, specify?"
					
					android:layout_row="2"
            	android:layout_column="0"
